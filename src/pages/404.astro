---
import Layout from '../layouts/Layout.astro';
import notFoundImg from '../assets/four-oh-four.png';
---

<Layout
	title="Page not found"
	noIndex
>
	<div class="flex flex-col items-center justify-center gap-4 text-center min-h-[calc(100dvh-64px)] p-4">
		<img src={notFoundImg.src} alt="404 Not Found" width="420" class="mx-auto max-w-full h-auto" />
		<p data-typed-text class="mb-10 text-white font-mono text-[clamp(18px,2.5vw,20px)]"><noscript>this must not be the place</noscript></p>
		<a href="/" class="group inline-block font-mono text-[var(--color-text)] transition-colors hover:text-[var(--color-brand)]">
			<span class="squiggle-underline">go home</span>
		</a>
	</div>

	<script type="module">
		import { typedText } from '/src/lib/typed-text.ts';
		const el = document.querySelector('[data-typed-text]');
		if (el) {
			typedText(el, 'this must not be the place');
		}
	</script>
</Layout>
